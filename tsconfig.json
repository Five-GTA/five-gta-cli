{
  "compilerOptions": {
    "target": "ES2020", 
    "module": "commonjs",                    
    "allowJs": true,                      
    "strict": true,
    "outDir": "./lib",                           
    "moduleResolution": "node",            
    "esModuleInterop": true,              
    "skipLibCheck": true,        
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true 
  },
  "include": ["src"],
  "exclude": ["node_module"]
}
